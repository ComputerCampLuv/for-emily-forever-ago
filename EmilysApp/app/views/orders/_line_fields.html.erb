<div class="nested-fields">
  <div class="row mb-4">
    <div class="col-4">
      <%= f.collection_select(:item_id, Item.all, :id, :description, {prompt: true}, {class: "big-form form-control form-control-lg"}) %>
    </div>
    <div class="col-2">
      <%= f.number_field :quantity, value: f.object.quantity || 1, class: "big-form form-control form-control-lg" %>
    </div>
    <div class="col-2">
      <%= f.number_field :unit_price, placeholder: "Price", class: "big-form form-control form-control-lg" %>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <%= link_to_remove_association 'Remove Line', f, class: "big-butt btn btn-lg btn-secondary" %>
    </div>
  </div>
</div>
