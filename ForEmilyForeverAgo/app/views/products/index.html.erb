<h1>Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Delete', product_path(product), method: :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'Create New', new_product_path %>
<br /><br />
<%= link_to 'Back to Orders', orders_path %>


